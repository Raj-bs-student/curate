{
  "version": 2,
  "buildCommand": "npm install && npm run build:frontend",
  "builds": [
    {
      "src": "backend/api/index.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["backend/**"] }
    },
    {
      "src": "frontend",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build",
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/backend/api/index.js" },
    { "source": "/(.*)", "destination": "/frontend/dist/index.html" }
  ]
}